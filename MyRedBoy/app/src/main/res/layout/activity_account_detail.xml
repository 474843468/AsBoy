<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_more_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="用户名:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_userName"
            android:padding="10dp"
            android:text="张三"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="总积分:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_countNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_count"
            android:padding="10dp"
            android:text="400"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hydj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="会员等级:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/hy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hydj"
            android:padding="10dp"
            android:text="普通会员"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_myForm"
            style="@style/moreStyle"
            android:background="@drawable/input_num"
            android:text="我的订单(10)"/>

        <TextView
            android:id="@+id/tv_adressManager"
            style="@style/moreStyle"
            android:layout_below="@+id/tv_myForm"
            android:background="@drawable/input_num"
            android:text="地址管理"/>

        <TextView
            android:id="@+id/card"
            style="@style/moreStyle"
            android:layout_below="@+id/tv_adressManager"
            android:background="@drawable/input_num"
            android:text="优惠券/礼品卡(3)"/>

        <TextView
            android:id="@+id/stow"
            style="@style/moreStyle"
            android:layout_below="@+id/card"
            android:background="@drawable/input_num"
            android:text="收藏夹(6)"/>
    </RelativeLayout>


</LinearLayout>
