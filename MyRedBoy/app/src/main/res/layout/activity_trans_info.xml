<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_input_disable"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvTransStyleDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货方式："
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTransStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvTransStyleDes"
                android:text="快递"
                android:textColor="#555"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDeliveryDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTransStyleDes"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="物流编号："
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTransStyleDes"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvDeliveryDes"
                android:text="SF00101010992"
                android:textColor="#555"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvCompanyDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDeliveryDes"
                android:text="物流公司："
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDeliveryDes"
                android:layout_toRightOf="@id/tvCompanyDes"
                android:text="韵达快运"
                android:textColor="#555"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvNumDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCompanyDes"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="运单号码："
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCompanyDes"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvNumDes"
                android:text="201607080101200097039"
                android:textColor="#555"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDeliveryInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNumDes"
                android:lineSpacingExtra="5dp"
                android:text="物流跟踪："
                android:textColor="#555"
                android:textSize="16sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNumDes"
            android:layout_margin="10dp"
            android:text="物流详情："
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDeliveryDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_input_disable"
            android:lineSpacingExtra="5dp"
            android:padding="15dp"
            android:textColor="#555"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
