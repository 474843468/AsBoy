<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d90000"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="购物车"
            android:textColor="@color/selector_bottom_textcolor"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_shoppingcar_btn_edit"
            android:text="编  辑"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_shoppingcar_btn_edit"
            android:text="去 结 算"
            android:textColor="#fff"
            android:textSize="18sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/empty_shopping_car"
            />


        <Button
            android:id="@+id/login"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_shoppingcar_btn_gg"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_below="@+id/Empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>

    </RelativeLayout>

</LinearLayout>